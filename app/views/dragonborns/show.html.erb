<h1><%= @selected_dragonborn.name %>'s Quests</h1>

<ol>
  <% @quests.each do |quest| %>
    <li><%= quest.task %> (Given by: <%= quest.quest_giver %>)</li>
  <% end %>
</ol>

<h2>Add a new Quest:</h2>
<%= form_for [@selected_dragonborn, @quest] do |f| %>
  <fieldset>
    <%= f.label :quest_giver, 'Given By' %>
    <%= f.text_field :quest_giver %>

    <%= f.label :task, 'Task' %>
    <%= f.text_field :task %>

    <%= f.submit 'Accept!' %>
  </fieldset>
<% end %>
